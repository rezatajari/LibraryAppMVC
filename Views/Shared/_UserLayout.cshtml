<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Personal Library</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --sidebar-width: 250px;
        }
        
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            background: #343a40;
            color: white;
            padding: 20px 0;
            transition: all 0.3s;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            padding: 20px;
        }

        .sidebar-header {
            padding: 10px 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 10px 20px;
            margin: 5px 0;
            border-radius: 4px;
        }

            .nav-link:hover, .nav-link.active {
                color: white;
                background: rgba(255,255,255,0.1);
                text-decoration: none;
            }

            .nav-link i {
                margin-right: 10px;
            }

        .profile-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 2rem;
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #f8f9fa;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h4 class="text-center">My Library</h4>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link active" asp-controller="Profile" asp-action="Profile">
                <i class="bi bi-person"></i>
                <span>Profile</span>
            </a>
            <a class="nav-link" asp-controller="Library" asp-action="Home">
                <i class="bi bi-book"></i>
                <span>Book Management</span>
            </a>
            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
            <a class="nav-link text-danger" asp-controller="Account" asp-action="DeleteConfirmation">
                <i class="bi bi-trash"></i>
                <span>Delete Account</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>