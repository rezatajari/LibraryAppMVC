@{
    ViewData["Title"] = "Account Deleted";
}
.container {
max-width: 600px;
margin: 0 auto;
padding: 20px;
}

.text-center h1 {
font-size: 2.5rem;
color: #dc3545; /* Bootstrap Danger Color */
}

.text-center p {
font-size: 1.2rem;
color: #6c757d; /* Bootstrap Secondary Color */
}

.btn {
margin: 5px;
padding: 10px 20px;
font-size: 1rem;
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="text-danger">Account Deleted</h1>
        <p class="mt-3">
            Your account has been successfully deleted. We're sorry to see you go!
        </p>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>
</div>
