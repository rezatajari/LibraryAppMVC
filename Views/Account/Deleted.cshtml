@{
    ViewData["Title"] = "Account Deleted";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body text-center p-5">
            <div class="text-danger mb-4">
                <i class="bi bi-person-x-fill" style="font-size: 5rem;"></i>
            </div>
            <h1 class="display-5 fw-bold mb-4">Account Permanently Deleted</h1>

            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-circle-fill"></i>
                All your data has been completely removed from our systems.
            </div>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-house-door"></i> Return to Homepage
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-person-plus"></i> Create New Account
                </a>
            </div>

            <div class="mt-4 text-muted">
                <small>
                    If this was a mistake, please contact
                    <a href="mailto:support@yourlibrary.com">support@yourlibrary.com</a>
                </small>
            </div>
        </div>
    </div>
</div>