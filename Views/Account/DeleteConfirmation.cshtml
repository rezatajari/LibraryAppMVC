@{
    ViewData["Title"] = "Confirm Account Deletion";
    Layout = "_UserLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Account Deletion
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>This action will permanently delete your account and all associated data.</p>
                        <hr>
                        <p class="mb-0">This cannot be undone. Are you sure you want to proceed?</p>
                    </div>

                    <div class="mb-4">
                        <h5>What will be deleted:</h5>
                        <ul>
                            <li>Your profile information</li>
                            <li>All your saved books and collections</li>
                            <li>Your reading history and preferences</li>
                        </ul>
                    </div>

                    <form asp-controller="Account" asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Profile" asp-action="Profile" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Yes, Delete My Account Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>