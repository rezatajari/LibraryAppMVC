@model LibraryAppMVC.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Book Details"; var refererUrl = ViewBag.Referer as string;
}
<head>
    
    <style>
        .book-details-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

            .book-details-container h2 {
                margin-bottom: 20px;
            }

            .book-details-container p {
                margin: 10px 0;
            }

            .book-details-container label {
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="book-details-container">
        <h2>Book Details</h2>
        <p><label>Title:</label> @Model.Title</p>
        <p><label>Author:</label> @Model.Author</p>
        <p><label>Genre:</label> @Model.Genre</p>
    </div>
    @if (!string.IsNullOrEmpty(refererUrl))
    {
        <a href="@refererUrl" class="btn btn-secondary">Back</a>
    }
    <a href="@Url.Action("Home")" class="btn btn-primary">Home Library</a>
</body>
